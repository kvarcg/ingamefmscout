<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="FMScout.View.WindowLoading"
    WindowStartupLocation="CenterOwner"
	Width="300" Height="110" 
    ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False" WindowStyle="None"
    AllowsTransparency="True"
	Style="{DynamicResource ChildWindowVisualStyle}" Background="Transparent">
    <Border CornerRadius="14,14,4,4" 
	Background="{StaticResource LoadingWindowMainBackground}"
	BorderBrush="{StaticResource LoadingWindowMainBorder}" 
	BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="loadingLabel" Margin="4,4,4,4" Grid.Row="0" TextAlignment="Center" TextWrapping="Wrap"/>
		<TextBlock x:Name="infoLabel" Margin="4,4,4,4" Grid.Row="1" TextAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</Window>
