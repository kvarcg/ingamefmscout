	<Style x:Key="ProfileSelectionCheckBox" TargetType="{x:Type CheckBox}">
		<Setter Property="FocusVisualStyle" Value="{DynamicResource Focus}"/>
		<Setter Property="Foreground" Value="{StaticResource ProfileSelectionCheckBoxForeground}"/>
		<Setter Property="Background" Value="{StaticResource ProfileSelectionCheckBoxBackground}"/>
		<Setter Property="BorderBrush" Value="{StaticResource ProfileSelectionCheckBoxBorder}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
